<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="App\Domain\Event\Event" table="actor">
        <id name="id" type="bigint" column="id" />
        <field name="type" enum-type="App\Domain\Event\EventType"/>
        <field name="count" type="integer" />
        <many-to-one field="actor" target-entity="App\Domain\Actor\Actor" >
            <join-column name="actor_id" />
        </many-to-one>
        <many-to-one field="repo" target-entity="App\Domain\Repo\Repo" >
            <join-column name="repo_id" />
        </many-to-one>
        <field name="payload" type="json" />
        <field name="createdAt" type="datetime" />
        <field name="comment" nullable="true" />
    </entity>
</doctrine-mapping>
